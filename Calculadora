def Menu_1():
    print("-----------------------------------------------")
    print("|    Menu   |           Descripción           |")
    print("-----------------------------------------------")
    print("|    [m]    |     Menu principal.             |")
    print("|    [6]    |     volummen de un cubo.        |")
